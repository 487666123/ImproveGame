    NoBiomeSpread.Label: "[centeritem:Sunflower] Stop the evil biomes and the Hallow biome from spreading"
    RespawnWithFullHP.Label: "[centeritem:LifeCrystal] Respawn with full HP"
    DontDeleteBuff:
    {
        Label: "[centeritem:FlaskofNanites] Keep buffs after death"
        Tooltip: "Make all buffs stay active after death"
    }
    JourneyResearch:
    {
        Label: "[centeritem:GoldBunny] Auto Research"
        Tooltip:
            '''
            In Journey mode, items in sufficient stack number and marked as favorite will be automatically researched
